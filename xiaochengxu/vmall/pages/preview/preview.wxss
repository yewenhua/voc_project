page{
    background: #f4f4f4;
}
.wraper{
	position: relative;
}
/*收货地址*/
.address{
	padding: 30rpx ;
	background: #fff;
	margin-top: 20rpx;
    position: relative;
}
.address .user{
    display: flex;
    flex-direction: row;
}
.address .user image{
    width: 30rpx;
    height: 30rpx;
    position: relative;
    top: 4rpx;
    margin-right: 10rpx;
}
.address .detail image{
    width: 32rpx;
    height: 32rpx;
    position: relative;
    top: 4rpx;
    margin-right: 10rpx;
}

.address .name{
	line-height: 60rpx;
    font-size: 32rpx;
    color: #999;
}
.address .number{
	line-height: 60rpx;
	margin-left: 60rpx;
    font-size: 32rpx;
    color: #999;
}
.address .detail{
    font-size: 30rpx;
    color: #999;
}
.address-edit{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 30rpx;
}
.address-edit image{
    width: 40rpx;
    height: 40rpx;
}
/*商品订单列表*/
.productDetails{
	background: #fff;
	margin-top: 20rpx;
	color: #666;
}
.productPrice, .productQuantity{
    font-size: 32rpx;
}
.orderListTitle{
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.orderListTitle .userImg{
	float: left;
	width: 50rpx;
	height: 50rpx;
	margin:10rpx 30rpx;
}
.orderListTitle .userImg image{
	border-radius: 35rpx;
	width: 100%;
	height: 100%;
}
.orderListTitle .userName{
	padding-right: 50rpx;
    font-size:24rpx;
}
.orderListTitle .orderStatus{
	float: right;
	margin-right: 30rpx;
	color: #2f7b27;
	font-size: 24rpx;
}
.orderListDetails{
	display: flex;
	height: 180rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.orderListDetails .productImg{
	flex: 1;
	height: 140rpx;
	margin-top: 20rpx;
	margin-left: 30rpx;
}
.orderListDetails .productImg image{
	width: 100%;
	height: 100%;
}
.orderListDetails .productInfo{
	flex: 4;
	padding: 20rpx 30rpx;
}
.orderListDetails .productInfo .productTitle{
	overflow: hidden;
	text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 32rpx;
}
.orderListDetails .productInfo .productQuantity{
	float: right;
}
.productCount{
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #f3f3f3;
    font-size: 32rpx;
}
.productCount>view{
	float: right;
	margin-right: 30rpx;
}
.productCount .expenses{
	float: left;
	padding-left: 30rpx;
    font-size: 32rpx;
}
.productCount .noExpenses{
	float: right;
	padding-right: 30rpx;
    font-size: 32rpx;
}
/*提交订单*/
.submitOrder{
	width: 100%;
	height: 100rpx;
	background: #fff;
	position: fixed;
	bottom: 0;
}
.submitOrder .account{
	float: right;
	font-size: 32rpx;
	color: #666;
	margin-right: 30rpx;
	text-align: right;
}
.submitOrder .account .count{
	line-height: 100rpx;
}
.submitOrder .account .price{
	color: #FF8247;
    font-size: 40rpx;
}
.submitOrder .submit{
	float: right;
}
.submitOrder .submit .submitBtn{
	width: 250rpx;
	height: 100rpx;
	line-height: 100rpx;
	color: #fff;
	border-radius: 0px;
	border: none;
	background: #f12035;
}